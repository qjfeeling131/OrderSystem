@{
    Layout = "~/views/template/content.cshtml";
}


@section title{ 经销商平台 | 留言板 }


@section content_header{

    <h1>
        <b>留言板</b>
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/home/home"><i class="glyphicon glyphicon-home"></i> 主页</a></li>
        <li class="active">留言板</li>
    </ol>
}


@section content{
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title"><label>历史留言</label></h3>

            <div class="box-tools">
                <div class="input-group">
                    <input type="text" name="key" class="form-control input-sm pull-right" style="width: 150px;" placeholder="搜索" value="@ViewBag.Key ">
                    <div class="input-group-btn">
                        <button class="btn btn-sm btn-default" id="search"><i class="glyphicon glyphicon-search"></i></button>
                        <button style="margin-left:10px;" class="btn btn-sm  btn-info" id="leave"><i class="glyphicon glyphicon-comment"></i>&nbsp;我要留言</button>
                    </div>
                </div>

            </div>

        </div><!-- /.box-header -->
        <div class="box-body">

            <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                <div class="row">
                    <div class="col-sm-6"></div><div class="col-sm-6"></div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <table id="message_board_table" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                            <thead>
                                <tr role="row">
                                    <th tabindex="0">账户名</th>
                                    <th tabindex="0">邮箱</th>
                                    <th tabindex="0">地址</th>
                                    <th tabindex="0">标题</th>
                                    <th tabindex="0">操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr role="row">
                                        <td>@item.Name</td>
                                        <td>@item.Email</td>
                                        <td>@item.Title</td>
                                        <td>@item.Message</td>
                                        <td>
                                        <input type="hidden" name="messageGuid" value="@item.Guid"/>
                                        <button name="btn-showMsg" class="btn btn-primary">查看</button>
                                        </td>
                                    </tr>
                                }

                            </tbody>

                        </table>

                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-5"><div class="dataTables_info">当前第 @(ViewBag.PageIndex + 1) 页（共 @ViewBag.TotalPages 页）</div></div>
                    @if (ViewBag.TotalPages != null && ViewBag.TotalPages > 1)
                    {
                        <div class="col-sm-7">
                            <div class="dataTables_paginate" id="paginate">
                                <ul class="pagination">

                                    @{
                        var currentPage = (int)ViewBag.PageIndex + 1;
                        var beginIndex = 1;
                        if (currentPage < 4)
                        { beginIndex = 1; }
                        else if (currentPage >= (ViewBag.TotalPages - 4))
                        { beginIndex = (int)ViewBag.TotalPages - 4; }
                        else
                        { beginIndex = currentPage - 2; }
                        var count = ViewBag.TotalPages < (beginIndex + 4) ? ViewBag.TotalPages : (beginIndex + 4);
                                    }

                                    <li class="paginate_button  @(ViewBag.PageIndex==0?"disabled":"") ">
                                        <a href="@(ViewBag.PageIndex == 0 ? "#" : Url.Content("~/log/MessageBoard?key=" + ViewBag.Key + "&&pageIndex=" + (currentPage - 2)))">上一页</a>
                                    </li>

                                    @for (int i = beginIndex; i <= count; i++)
                                    {
                                        <li class="paginate_button @(i == currentPage ? "active" : "") ">
                                            <a href="@Url.Content("~/log/MessageBoard?key=" + ViewBag.Key + "&&pageIndex=" + (i - 1))">@i</a>
                                        </li>
                                    }

                                    <li class="paginate_button @(ViewBag.TotalPages == (ViewBag.PageIndex+1) ? "disabled" : "") ">
                                        <a href="@(ViewBag.TotalPages == (ViewBag.PageIndex + 1) ? "#" : Url.Content("~/log/MessageBoard?key=" + ViewBag.Key + "&&pageIndex=" + currentPage))">下一页</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>


}

@section script{
    @*<script src="~/Js/utility/jquery.min.js"></script>*@
    <script>
        $(function () {
            $("#messageManager").addClass("active");

            $("#search").click(function () {
                var key = $("input[name='key']").val();
                location.href = ' messageBoard?key=' + key;
            });

            $("#leave").click(function () {
                $(this).addClass("disabled");
                createDialog('@(Url.Content("~/log/leavemessage"))', "userguid=1");
            });

            $("button[name='btn-showMsg']").each(function () {
                $(this).click(function () {
                    $(this).addClass("disabled");
                    var guid = $(this).siblings("input[name='messageGuid']").val();
                    createDialog('@(Url.Content("~/log/messageBoardShow"))', "new=1&" + "messageGuid=" + guid);
                });
            })
        })

    </script>
}
